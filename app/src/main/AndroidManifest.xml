<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mango">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mangologo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mangologo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:theme="@style/LaunchTheme"
            android:name=".LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateWalletActivity"></activity>
        <activity android:name=".RemmberMnemonic"
            android:theme="@style/WalletListTheme"
            ></activity>
        <activity android:name=".WalletActivity"
            android:theme="@style/WalletListTheme"
            ></activity>
        <activity android:name=".WalletList"
            android:theme="@style/WalletListTheme"
            ></activity>
    </application>

</manifest>